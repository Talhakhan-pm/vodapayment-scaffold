<div id="<%= dom_id business_verification %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Business name:</strong>
    <%= business_verification.business_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Ein:</strong>
    <%= business_verification.ein %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Merchant:</strong>
    <%= business_verification.merchant_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this business verification", business_verification, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this business verification', edit_business_verification_path(business_verification), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
