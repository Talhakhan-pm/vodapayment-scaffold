<div id="<%= dom_id identity_verification %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Merchant:</strong>
    <%= identity_verification.merchant_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Ssn:</strong>
    <%= identity_verification.ssn %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this identity verification", identity_verification, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this identity verification', edit_identity_verification_path(identity_verification), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
